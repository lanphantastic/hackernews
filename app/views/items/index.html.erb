<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">

      <h1>index</h1>

      <ul class="list-group">
        <% @items.each do |item| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to(item.title, item.url) %>

          <span class="badge badge-primary badge-pill"><%=link_to(item.descendants, "http://news.ycombinator.com/item?id=#{item.item_id.to_s}", :target => "_blank")%></span>
        </li>
        <% end %>
      </ul>

    </div>
  </div>
</div>
